{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2016",
         "esnext.asynciterable",
         "dom"
      ],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "types": ["node","reflect-metadata"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
        "paths": {
          "@plugins/*": ["src/plugins/*"],
          "@ioc/*": ["src/ioc/*"],
          "@base/*": ["src/*"],
          "@core/*": ["src/core/*"],
          "@plugin/*": ["src/plugins/*"]
        }
   }
}
